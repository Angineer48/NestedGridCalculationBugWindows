<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NestedGridCalculationBugWindows.MainPage">

    <FlexLayout HorizontalOptions="Fill" BackgroundColor="AntiqueWhite" JustifyContent="SpaceBetween">
        <BoxView Color="Yellow" WidthRequest="100" />
        <Grid ColumnDefinitions="*" BackgroundColor="LightCoral" HorizontalOptions="Fill" FlexLayout.Grow="1" FlexLayout.Shrink="1" FlexLayout.Basis="150">
            <FlexLayout Grid.Row="1" Grid.Column="1" BackgroundColor="LightGray" HorizontalOptions="Fill" JustifyContent="SpaceBetween">
                <Label Padding="5" VerticalTextAlignment="Center" Text="First" BackgroundColor="OrangeRed" />
                <Label Padding="5" VerticalTextAlignment="Center" Text="Second" Background="Red" />
                <Label Padding="5" WidthRequest="220" VerticalTextAlignment="Center" Text="ThirdThird" Background="Purple" />
            </FlexLayout>
        </Grid>
        <BoxView Color="Yellow" WidthRequest="100" />
    </FlexLayout>

</ContentPage>
